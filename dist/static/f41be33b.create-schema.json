      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "uri",
                "constraint": {
                  "options": {
                    "scheme": [
                      "/^http$/",
                      "/^https$/"
                    ],
                    "allowRelative": false,
                    "relativeOnly": false,
                    "allowCredentials": false
                  }
                }
              }
            ],
            "level": "error"
          }
        ],
        "description": "Direct Instagram profile URL (used as a fallback if not set in Social Links)",
        "name": "instagramUrl",
        "type": "url",
        "title": "Instagram URL"
      },
      {
        "rows": 3,
        "description": "Short text shown below the social media icons in the About panel",
        "name": "aboutIntroText",
        "type": "text",
        "title": "About Me Introduction Text"
      },
      {
        "description": "Social media links (shown in accordion items with \"Show Social Links\" enabled)",
        "of": [
          {
            "fields": [
              {
                "options": {
                  "list": [
                    {
                      "title": "Twitter/X",
                      "value": "twitter"
                    },
                    {
                      "title": "LinkedIn",
                      "value": "linkedin"
                    },
                    {
                      "title": "GitHub",
                      "value": "github"
                    },
                    {
                      "title": "Instagram",
                      "value": "instagram"
                    },
                    {
                      "title": "YouTube",
                      "value": "youtube"
                    },
                    {
                      "title": "Email",
                      "value": "email"
                    },
                    {
                      "title": "Website",
                      "value": "website"
                    }
                  ]
                },
                "validation": [
                  {
                    "rules": [
                      {
                        "flag": "valid",
                        "constraint": [
                          "twitter",
                          "linkedin",
                          "github",
                          "instagram",
                          "youtube",
                          "email",
                          "website"
                        ]
                      },
                      {
                        "flag": "presence",
                        "constraint": "required"
                      }
                    ],
                    "level": "error"
                  }
                ],
                "name": "platform",
                "type": "string"
              },
              {
                "validation": [
                  {
                    "rules": [
                      {
                        "flag": "presence",
                        "constraint": "required"
                      },
                      {
                        "flag": "uri",
                        "constraint": {
                          "options": {
                            "scheme": [
                              "/^http$/",
                              "/^https$/",
                              "/^mailto$/"
                            ],
                            "allowRelative": false,
                            "relativeOnly": false,
                            "allowCredentials": false
                          }
                        }
                      }
                    ],
                    "level": "error"
                  }
                ],
                "name": "url",
                "type": "url",
                "title": "URL"
              }
            ],
            "type": "object",
            "name": "socialLink"
          }
        ],
        "name": "socialLinks",
        "type": "array"
      },
      {
        "description": "Items for the scrolling footer marquee with optional icons",
        "of": [
          {
            "fields": [
              {
                "validation": [
                  {
                    "rules": [
                      {
                        "flag": "presence",
                        "constraint": "required"
                      }
                    ],
                    "level": "error"
                  }
                ],
                "name": "text",
                "type": "string"
              },
              {
                "options": {
                  "hotspot": true
                },
                "description": "Optional icon to display alongside the text",
                "name": "icon",
                "type": "image"
              }
            ],
            "type": "object",
            "name": "marqueeItem"
          }
        ],
        "name": "footerMarqueeItems",
        "type": "array"
      }
