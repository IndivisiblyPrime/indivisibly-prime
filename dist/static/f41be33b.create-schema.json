      {
        "description": "Accordion sections for the About Me page.",
        "of": [
          {
            "fields": [
              {
                "validation": [
                  {
                    "rules": [
                      {
                        "flag": "presence",
                        "constraint": "required"
                      }
                    ],
                    "level": "error"
                  }
                ],
                "name": "title",
                "type": "string"
              },
              {
                "initialValue": "text",
                "options": {
                  "list": [
                    {
                      "title": "Text (plain content)",
                      "value": "text"
                    },
                    {
                      "title": "Experience (job cards with timeline)",
                      "value": "experience"
                    },
                    {
                      "title": "Logo + Freeform (cards without timeline)",
                      "value": "logoFreeform"
                    },
                    {
                      "title": "Contact Form",
                      "value": "contact"
                    }
                  ],
                  "layout": "radio"
                },
                "description": "Choose how this accordion item renders when expanded.",
                "name": "itemType",
                "type": "string"
              },
              {
                "rows": 4,
                "description": "Text content shown when expanded (for \"Text\" type only).",
                "hidden": "conditional",
                "name": "content",
                "type": "text"
              },
              {
                "initialValue": false,
                "description": "Display social links below the content",
                "hidden": true,
                "name": "showSocialLinks",
                "type": "boolean"
              },
              {
                "description": "Add one entry per job role.",
                "of": [
                  {
                    "fields": [
                      {
                        "options": {
                          "hotspot": true
                        },
                        "description": "Square company logo/icon",
                        "name": "logo",
                        "type": "image",
                        "title": "Company Logo"
                      },
                      {
                        "validation": [
                          {
                            "rules": [
                              {
                                "flag": "presence",
                                "constraint": "required"
                              }
                            ],
                            "level": "error"
                          }
                        ],
                        "description": "e.g. \"Full Stack Software Engineer – (Machine Learning)\"",
                        "name": "jobTitle",
                        "type": "string"
                      },
                      {
                        "description": "e.g. \"Mar 2023 – now\"",
                        "name": "dateRange",
                        "type": "string"
                      },
                      {
                        "name": "company",
                        "type": "string",
                        "title": "Company Name"
                      },
                      {
                        "rows": 4,
                        "description": "Freeform text shown below the job title. Use newlines however you like.",
                        "name": "description",
                        "type": "text"
                      }
                    ],
                    "type": "object",
                    "name": "experienceEntry"
                  }
                ],
                "hidden": "conditional",
                "name": "experienceEntries",
                "type": "array"
              },
              {
                "description": "Each entry shows an optional logo next to freeform text. No timeline line.",
                "of": [
                  {
                    "fields": [
                      {
                        "options": {
                          "hotspot": true
                        },
                        "description": "Optional square logo/icon",
                        "name": "logo",
                        "type": "image",
                        "title": "Logo (optional)"
                      },
                      {
                        "validation": [
                          {
                            "rules": [
                              {
                                "flag": "presence",
                                "constraint": "required"
                              }
                            ],
                            "level": "error"
                          }
                        ],
                        "name": "title",
                        "type": "string"
                      },
                      {
                        "description": "e.g. \"2020 – present\"",
                        "name": "dateRange",
                        "type": "string"
                      },
                      {
                        "description": "Optional subtitle line below the title",
                        "name": "subtitle",
                        "type": "string"
                      },
                      {
                        "rows": 4,
                        "description": "Freeform text — write however you like.",
                        "name": "description",
                        "type": "text"
                      }
                    ],
                    "type": "object",
                    "name": "logoFreeformEntry",
                    "title": "Entry"
                  }
                ],
                "hidden": "conditional",
                "name": "logoFreeformEntries",
                "type": "array",
                "title": "Logo + Freeform Entries"
              }
            ],
            "type": "object",
            "name": "accordionItem"
