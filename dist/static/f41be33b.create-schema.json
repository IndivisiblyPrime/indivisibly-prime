        "name": "heroVideo",
        "type": "file",
        "title": "Hero Background Video"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "uri",
                "constraint": {
                  "options": {
                    "scheme": [
                      "/^http$/",
                      "/^https$/"
                    ],
                    "allowRelative": false,
                    "relativeOnly": false,
                    "allowCredentials": false
                  }
                }
              }
            ],
            "level": "error"
          }
        ],
        "description": "External video URL (e.g., from a CDN). Used if no uploaded video.",
        "name": "heroVideoUrl",
        "type": "url",
