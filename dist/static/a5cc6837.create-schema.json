        "of": [
          {
            "fields": [
              {
                "options": {
                  "list": [
                    {
                      "title": "Twitter/X",
                      "value": "twitter"
                    },
                    {
                      "title": "LinkedIn",
                      "value": "linkedin"
                    },
                    {
                      "title": "GitHub",
                      "value": "github"
                    },
                    {
                      "title": "Instagram",
                      "value": "instagram"
                    },
                    {
                      "title": "YouTube",
                      "value": "youtube"
                    },
                    {
                      "title": "Email",
                      "value": "email"
                    },
                    {
                      "title": "Website",
                      "value": "website"
                    }
                  ]
                },
                "validation": [
                  {
                    "rules": [
                      {
                        "flag": "valid",
                        "constraint": [
                          "twitter",
                          "linkedin",
                          "github",
                          "instagram",
                          "youtube",
                          "email",
                          "website"
                        ]
                      },
                      {
                        "flag": "presence",
                        "constraint": "required"
                      }
                    ],
                    "level": "error"
                  }
                ],
                "name": "platform",
                "type": "string"
              },
              {
                "validation": [
                  {
                    "rules": [
                      {
                        "flag": "presence",
                        "constraint": "required"
                      },
                      {
                        "flag": "uri",
                        "constraint": {
                          "options": {
                            "scheme": [
                              "/^http$/",
                              "/^https$/",
                              "/^mailto$/"
                            ],
                            "allowRelative": false,
                            "relativeOnly": false,
                            "allowCredentials": false
                          }
                        }
                      }
                    ],
                    "level": "error"
                  }
                ],
                "name": "url",
                "type": "url",
                "title": "URL"
